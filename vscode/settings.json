// Place your settings in this file to overwrite the default settings
{
  // Workaround for https://github.com/microsoft/vscode/issues/146403
  "editor.mouseWheelScrollSensitivity": 0.5,
  "workbench.list.mouseWheelScrollSensitivity": 0.5,
  "terminal.integrated.mouseWheelScrollSensitivity": 0.5,

  // Workaround for:
  // - https://github.com/microsoft/vscode/issues/157325
  // - https://github.com/microsoft/vscode/issues/153800
  "git.mergeEditor": false,

  // #region - General
  "[swift]": {
    "editor.defaultFormatter": "vknabel.vscode-apple-swift-format"
  },
  "breadcrumbs.enabled": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.comments.ignoreEmptyLines": false,
  "editor.cursorStyle": "block",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.detectIndentation": true,
  "editor.dragAndDrop": false,
  "editor.fontFamily": "'SF Mono', Menlo, Monaco, 'Courier New', monospace",
  "editor.formatOnSave": true,
  "editor.insertSpaces": true,
  "editor.minimap.enabled": false,
  "editor.rulers": [80, 120],
  "editor.tabSize": 2,
  "editor.wordWrap": "off",
  "files.associations": {
    "*.apns": "json",
    "*.plist": "xml",
    "Portfile": "tcl"
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "build": true,
    "dist": true
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "search.showLineNumbers": true,
  "terminal.integrated.defaultProfile.osx": "fish",
  "terminal.integrated.drawBoldTextInBrightColors": false,
  "terminal.integrated.profiles.osx": {
    "fish": {
      "path": "/opt/local/bin/fish",
      "args": ["-l"]
    }
  },
  "terminal.integrated.scrollback": 2000,
  "window.autoDetectColorScheme": true,
  "workbench.activityBar.visible": true,
  "workbench.colorCustomizations": {
    "editor.selectionBackground": "#EAE3CB",
    "statusBar.debuggingForeground": "#C56231"
  },
  "workbench.colorTheme": "Solarized Light",
  "workbench.editor.closeEmptyGroups": false,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.preferredDarkColorTheme": "Solarized Dark",
  "workbench.preferredLightColorTheme": "Solarized Light",
  "workbench.settings.editor": "json",
  "workbench.startupEditor": "none",
  "workbench.statusBar.visible": true,
  // #endregion - General

  // #region - Languages
  "typescript.preferences.importModuleSpecifier": "relative",
  // #endregion - Languages

  // #region - Extensions
  "apple-swift-format.path": [
    "~/.mint/packages/github.com_apple_swift-format/build/0.50700.1/swift-format"
  ],
  "apple-swift-format.onlyEnableWithConfig": true,
  "apple-swift-format.configSearchPaths": [
    ".swift-format",
    "swift-format.json",
  ],

  "color-highlight.markerType": "underline",

  "cSpell.enableFiletypes": [
    "bicep"
  ],
  "cSpell.userWords": [
    "accum",
    "atts",
    "backend",
    "bson",
    "comparator",
    "cooldown",
    "customizations",
    "datetime",
    "debounced",
    "deserialize",
    "deserializes",
    "dissoc",
    "endregion",
    "enqueues",
    "gatekeep",
    "memoized",
    "paginator",
    "powerset",
    "processable",
    "procs",
    "release",
    "reqs",
    "serializers",
    "subdocument",
    "subproperty",
    "transpirations",
    "unmock",
    "unmount",
    "unmounting",
    "unnest",
    "unprocessable",
    "unpublish",
    "unshifted",
    "untrusted",
    "upsert",
    "vals",
    "visibilities",
    "whitelisting"
  ],

  "gitlens.codeLens.enabled": false,

  "material-icon-theme.files.associations": {
    "actions.ts": "redux-action",
    "reducer.ts": "redux-reducer",
    "state.ts": "redux-store",
    ".env.*.local": "tune",
    ".env.test": "tune",
    "*.stencil": "swift"
  },
  "material-icon-theme.folders.associations": {
    "types": "typescript",
    "utils": "tools",
    "store": "redux-store"
  },

  "prettier.requireConfig": true,

  "redhat.telemetry.enabled": false,

  "todohighlight.keywords": [
    {
      "text": "TODO",
      "color": "#fff",
      "backgroundColor": "#ffbd2a",
      "overviewRulerColor": "rgba(255,189,42,0.8)"
    },
    {
      "text": "FIXME",
      "color": "#fff",
      "backgroundColor": "#f06292",
      "overviewRulerColor": "rgba(240,98,146,0.8)"
    },
    {
      "text": "MARK:",
      "color": "#fff",
      "backgroundColor": "#1ea198",
      "overviewRulerColor": "rgba(30,161,152,0.8)"
    },
    {
      "text": "#region",
      "color": "#fff",
      "backgroundColor": "#1ea198",
      "overviewRulerColor": "rgba(30,161,152,0.8)"
    },
    {
      "text": "#endregion",
      "color": "#fff",
      "backgroundColor": "#a0d7d3",
      "overviewRulerColor": "rgba(160,215,211,0.8)"
    }
  ],
  // #endregion - Extensions
}
