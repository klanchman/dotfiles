{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "git blame",
      "type": "shell",
      "command": "git blame ${file}",
      "options": {
        "env": {
          "DELTA_PAGER": "less -R"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "close": true
      },
      "problemMatcher": []
    }
  ]
}
